const { ApolloServer, PubSub, gql } = require('apollo-server');
const pubsub = new PubSub();
const PORT = 4000;

// Schema definition
const typeDefs = gql`
  type Query {
    currentNumber: Int
   R(name:String): String
}

  type Subscription {
    nm: Int
  }
`;

let currentNumber = 0;
let y = "ahmed"
// Resolver map
const resolvers = {
  Query: {
    R(__,args){
        return args.name+" added from GQL";
    },
  
    currentNumber() {
      currentNumber++;
      pubsub.publish('NUMBER_INCREMENTED', {nm: currentNumber });
      return currentNumber;
    }
  },
  Subscription: {
    nm: {
      subscribe: () => pubsub.asyncIterator(['NUMBER_INCREMENTED']),
    },
  }
};

const server = new ApolloServer({
  typeDefs,
  resolvers,
  subscriptions: {
    path: '/subscriptions',
    onConnect: (connectionParams, webSocket, context) => {
      console.log('Client connected');
    },
    onDisconnect: (webSocket, context) => {
      console.log('Client disconnected')
    },
  },
});


// function incrementNumber() {
//   currentNumber = 200;
//   pubsub.publish('NUMBER_INCREMENTED', { numberIncremented: currentNumber });
//   setTimeout(incrementNumber, 1000);
// }

server.listen().then(({ url }) => {
  console.log(`ðŸš€ Subscription endpoint ready at ws://localhost:${PORT}${server.subscriptionsPath}`)
  console.log('Query at studio.apollographql.com/dev')
});
